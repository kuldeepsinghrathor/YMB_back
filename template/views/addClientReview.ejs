<body class="bg-light">

    <!-- Preloader -->
    <div id="preloader">
        <div class="preloader-inner">
            <div class="spinner"></div>
            <div class="logo"><img src="../../public/assets/img/logo-icon.svg" alt="img"></div>
        </div>
    </div>

        <%- include('../partials/header') %>

        <%- include('../partials/sidebar') %>

        <main class="main-wrapper">
            <div class="container-fluid">
                <div class="inner-contents">
                    <div class="page-header d-flex align-items-center justify-content-between mr-bottom-30">
                        <div class="left-part">
                            <h2 class="text-dark">Add Client Review</h2>
                        </div>
                    </div>
    
                    <div class="card border-0">
                        <div class="card-header bg-transparent border-0 p-5 pb-0">
                            <h5 class="mb-0">Add Client Review</h5>
                        </div>
    
                        <div class="card-body pt-3">
                            <form id="clientReviewForm" enctype="multipart/form-data" action="/api/addClientReview" class="" method="post">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label">Name</label>
                                            <input type="text" class="form-control" name="name" value="" placeholder="Text_1">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label">Designation</label>
                                            <input type="text" class="form-control" name="designation" value="" placeholder="Enter your designation">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-label">Message</label>
                                            <textarea class="form-control" id="exampleFormControlTextarea1" name="message" placeholder="Enter message" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-label">Select Image</label>
                                            <input type="file" class="form-control" name="image" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
    
                </div>
            </div>
        </main>

        <script src="../../public/assets/js/jquery-3.6.0.min.js"></script>
        <script src="../../public/assets/js/bootstrap.bundle.min.js"></script>

        <!-- jQuery UI Kit -->
        <script src="../../public/plugins/jquery_ui/jquery-ui.1.12.1.min.js"></script>

        <!-- ApexChart -->
        <script src="../../public/plugins/apexchart/apexcharts.min.js"></script>
        <script src="../../public/plugins/apexchart/apexchart-inits/apexcharts-analytics-2.js"></script>

        <!-- Peity  -->
        <script src="../../public/plugins/peity/jquery.peity.min.js"></script>
        <script src="../../public/plugins/peity/piety-init.js"></script>

        <!-- Select 2 -->
        <script src="../../public/plugins/select2/js/select2.min.js"></script>

        <!-- Datatables -->
        <script src="../../public/plugins/datatables/js/jquery.dataTables.min.js"></script>
        <script src="../../public/plugins/datatables/js/datatables.init.js"></script>



        <!-- Date Picker -->
        <script src="../../public/plugins/flatpickr/flatpickr.min.js"></script>

        <!-- Dropzone -->
        <script src="../../public/plugins/dropzone/dropzone.min.js"></script>
        <script src="../../public/plugins/dropzone/dropzone_custom.js"></script>

        <!-- TinyMCE -->
        <script src="../../public/plugins/tinymce/tinymce.min.js"></script>
        <script src="../../public/plugins/prism/prism.js"></script>
        <script src="../../public/plugins/jquery-repeater/jquery.repeater.js"></script>





        <!-- Sweet Alert -->
        <script src="../../public/plugins/sweetalert/sweetalert2.min.js"></script>
        <script src="../../public/plugins/sweetalert/sweetalert2-init.js"></script>
        <script src="../../public/plugins/nicescroll/jquery.nicescroll.min.js"></script>
        <script src="../../public/plugins/nicescroll/jquery.nicescroll.min.js"></script>

        <!-- Snippets JS -->
        <script src="../../public/assets/js/snippets.js"></script>

        <!-- Theme Custom JS -->
        <script src="../../public/assets/js/theme.js"></script>

        <!-- SweetAlert2 -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        
        <script>
            document.addEventListener("DOMContentLoaded",function(){
                const ClientReviewForm = document.getElementById("clientReviewForm");
                console.log(ClientReviewForm);
                ClientReviewForm.addEventListener("submit",function(event){
                    event.preventDefault();
                    fetch("/api/addClientReview",{
                        method:"POST",
                        body: new FormData (ClientReviewForm),
                    }).then(response => response.json()).then(data=>{
                        console.log(data);
                        if(data.success == true){
                            Swal.fire({
                                title:"Success",
                                text:data.message,
                                icon:"success"
                            }).then(()=>{
                                window.location.href = "/api/viewClientReview";
                            })
                        }else{
                            Swal.fire('Error',data.message,"error");
                        }
                    }).catch((error)=>{
                        Swal.fire('Error',error.message,"error");
                    })
                })
            })
        </script>

</body>

</html>